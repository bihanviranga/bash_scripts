#!/usr/bin/env bash
: '
A simple script combining systemctl commands I use often.
'

services=(httpd mysqld mssql-server docker)

if [ -z "$1" ]
then
	for svc in "${services[@]}"
	do
		eval "systemctl --no-pager status $svc"
	done
elif [ "$1"="stopall" ]
then
	for svc in "${services[@]}"
	do
		eval "systemctl stop $svc"
	done
fi

